<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/organizerMainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp">

        <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/baseline_mail_outline_24"
            android:id="@+id/notificationBtn"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">
        </Button>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/custom_multi_textview"
            android:paddingVertical="4dp"
            android:paddingHorizontal="20dp">

            <TextView
                android:id="@+id/browseTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:text="Browse"
                android:background="@drawable/left_section_selector"
                android:textColor="@color/black"
                android:clickable="true"
                android:focusable="true"
                android:maxLines="1"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/btn_color" />

            <TextView
                android:id="@+id/facilityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:text="Facility"
                android:background="@drawable/right_section_selector"
                android:textColor="@color/black"
                android:clickable="true"
                android:focusable="true"
                android:maxLines="1"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/btn_color" />

            <TextView
                android:id="@+id/eventsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:text="Events"
                android:background="@drawable/right_section_selector"
                android:textColor="@color/black"
                android:clickable="true"
                android:focusable="true"
                android:maxLines="1"/>

        </LinearLayout>

        <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/qrCodeBtn"
            android:background="@drawable/baseline_qr_code_scanner_24"
            android:layout_gravity="start"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/adminContentFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/viewBrowseButtonsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Browse"
                android:textSize="28sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/browseFacilitiesBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Facilities"
                android:textSize="28sp"
                android:background="@drawable/my_drawable"
                android:paddingVertical="3dp">

            </TextView>

            <TextView
                android:id="@+id/browseEventsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Events"
                android:textSize="28sp"
                android:background="@drawable/my_drawable"
                android:paddingVertical="3dp">

            </TextView>

            <TextView
                android:id="@+id/browseProfilesBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Profiles"
                android:textSize="28sp"
                android:background="@drawable/my_drawable"
                android:paddingVertical="3dp">

            </TextView>

            <TextView
                android:id="@+id/browseImagesBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Images"
                android:textSize="28sp"
                android:background="@drawable/my_drawable"
                android:paddingVertical="3dp">

            </TextView>

            <TextView
                android:id="@+id/browseQRcodesBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" QRCodes"
                android:textSize="28sp"
                android:background="@drawable/my_drawable"
                android:paddingVertical="3dp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewFacilityLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Add views for Events here -->

            <LinearLayout
                android:id="@+id/facilityNotExistView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/createFacilityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Create a facility to host events"
                    android:textStyle="bold"
                    android:textSize="22sp"/>

                <Button
                    android:id="@+id/createFacilityBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create Facility"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/btn_color"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/facilityExistView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/organizerMainFacilityLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:padding="10dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/organizerMainFacilityName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Facility Name"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/organizerMainFacilityAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Facility Address"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/facilityEventText"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Facility Events"
                    android:textStyle="bold"
                    android:textSize="20sp"/>


                <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/adminMainFacilitySwipeRefreshLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/organizerMainFacilityEventView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewEventsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/adminMainEventSwipeRefreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/organizerMainEventView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/organizerMainAddEventFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_input_add"
            android:layout_gravity="bottom|end"
            android:layout_margin="10dp"
            android:visibility="gone"/>

    </FrameLayout>

</LinearLayout>

