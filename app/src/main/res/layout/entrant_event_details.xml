<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/light_purple">

    <!-- Organizer name row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <!-- Organizer icon -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profile"
            android:contentDescription="Organizer profile picture"
            android:layout_marginEnd="8dp" />

        <!-- Organizer name -->
        <TextView
            android:id="@+id/organizer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organizer name"
            android:textSize="18sp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <!-- Event poster (placeholder image) -->
    <ImageView
        android:id="@+id/event_poster"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/poster"
        android:contentDescription="Event poster"/>

    <!-- Event title -->
    <TextView
        android:id="@+id/event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Event"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"/>

    <!-- Event description -->
    <TextView
        android:id="@+id/event_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail description of the event"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginBottom="24dp"/>

    <!-- Buttons layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <!-- Cancel button -->
        <!-- Transparent Cancel button with selectable item background -->
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginEnd="12dp"
            android:textColor="@color/purple"
            android:backgroundTint="@color/light_purple"
            android:padding="12dp"/>


        <!-- Quit waiting list button -->
        <Button
            android:id="@+id/quit_waiting_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quit waiting list"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple"
            android:padding="12dp"/>
    </LinearLayout>

</LinearLayout>
